{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>int128/renovate-base",
    "github>int128/go-renovate-config#v1.7.0",
    "github>int128/go-renovate-config:github-actions#v1.7.0",
    "github>int128/go-renovate-config:kubebuilder#v1.7.0",
    "helpers:pinGitHubActionDigests"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "**/*"
      ],
      "enabled": false
    },
    {
      "description": "Update non-generated files only",
      "matchFileNames": [
        ".github/**",
        "e2e_test/**",
        ".kubebuilder-version"
      ],
      "enabled": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update .kubebuilder-version",
      "fileMatch": [
        "^\\.kubebuilder-version$"
      ],
      "matchStrings": [
        "^(?<currentValue>.*)$"
      ],
      "depNameTemplate": "kubernetes-sigs/kubebuilder",
      "datasourceTemplate": "github-releases"
    }
  ]
}