{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>int128/renovate-base",
    "github>int128/go-renovate-config#v1.5.0",
    "github>int128/go-renovate-config:github-actions#v1.5.0",
    "helpers:pinGitHubActionDigests",
  ],
  // do not update the scaffold output
  "enabledManagers": [
    "regex",
    "github-actions",
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": ['KUBEBUILDER_VERSION: (?<currentValue>.*)\\n'],
      "depNameTemplate": "kubernetes-sigs/kubebuilder",
      "datasourceTemplate": "github-releases",
    },
  ],
}
